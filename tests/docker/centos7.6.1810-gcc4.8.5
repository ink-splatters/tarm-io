FROM centos:7.6.1810

LABEL maintainer="av@tarm.io"

RUN yum -y install \
    gcc \
    gcc-c++ \
    make \
    nano \
    glibc-devel \
    wget \
    which \
    less \
    rpm-build \
    sudo

# Block device stub (needed for tests)
RUN dd if=/dev/zero of=/loopbackfile.img bs=10M count=1

WORKDIR /source
